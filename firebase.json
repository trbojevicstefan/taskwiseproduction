
{
  "hosting": {
    "source": ".",
    "ignore": [
      "firebase.json",
      ".firebase/**",
      "**/.*",
      "**/node_modules/**"
    ],
    "frameworksBackend": {
      "region": "us-central1"
    },
    "i18n": {}
  },
  "functions": [
    {
      "source": "src/functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ],
      "runtime": "nodejs20",
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" install",
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ],
      "secrets": [
        "SLACK_CLIENT_ID",
        "SLACK_CLIENT_SECRET",
        "GOOGLEOAUTH_CLIENT_ID",
        "GOOGLEOAUTH_CLIENT_SECRET",
        "TRELLO_API_KEY",
        "TRELLO_API_SECRET"
      ]
    }
  ],
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  }
}
